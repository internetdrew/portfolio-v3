---
import MainLayout from "./MainLayout.astro";
const { frontmatter } = Astro.props;
---

<MainLayout title={frontmatter.title}>
  <section class="my-10">
    <header
      class="text-center border border-slate-800 p-4 bg-pink-600 text-white rounded-lg"
    >
      <h1 class="text-2xl sm:text-3xl font-semibold">{frontmatter.title}</h1>
      <h2 class="max-w-lg mx-auto sm:text-lg">{frontmatter.description}</h2>
    </header>
    <div class="mt-10 prose">
      <slot />
    </div>
  </section>
</MainLayout>
