---
interface Props {
  companyName: string;
  position: string;
  contract: boolean;
  startDate: string;
  endDate: string | null;
  description: string;
}

const { companyName, contract, position, startDate, endDate, description } =
  Astro.props;
---

<article class="mt-2 border border-neutral-800 p-2 rounded-lg text-sm">
  <header class="flex items-center justify-between">
    <div>
      <h4 class="font-semibold inline-block text-base">{companyName}</h4>
      {contract && <span>{`(Contract)`}</span>}
    </div>
    <time datetime="2023-09-01" class="hidden sm:inline-block"
      >{startDate} - {endDate ?? "Present"}</time
    >
  </header>
  <h5>{position}</h5>
  <p class="mt-1 text-neutral-600">
    {description}
  </p>
</article>
