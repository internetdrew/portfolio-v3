---
import type { CollectionEntry } from 'astro:content';
interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<article
  class='border border-neutral-800 p-4 flex flex-col duration-150 h-full rounded-lg text-sm'
>
  <h2 class='font-bold text-base'>{post.data.title}</h2>
  <p class='mt-2 flex-1 text-neutral-500 group-hover:text-neutral-200'>
    {post.data.description}
  </p>
  <div class='flex justify-end mt-8'>
    <a
      href={`/blog/${post.slug}`}
      class='border border-neutral-800 px-3 py-1 rounded-md hover:bg-neutral-800'
    >
      Read More
    </a>
  </div>
</article>
