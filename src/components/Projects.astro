---
import ProjectCard from "./ProjectCard.astro";

export interface Project {
  title: string;
  description: string;
  siteUrl: string;
  cta: string;
}

const projects: Project[] = [
  {
    title: "Where's the Garlic?",
    description:
      "Kitchen inventory made simple. Know what you have, know what you need.",
    siteUrl: "https://www.wheresthegarlic.com/",
    cta: "Visit the app",
  },
  {
    title: "The HYBRD Launch Video",
    description:
      "I filmed and edited the launch video for YC-backed fitness startup, HYBRD.",
    siteUrl:
      "https://www.linkedin.com/posts/hybrd-do-hard-things_today-is-the-day-hybrd-is-officially-live-activity-7320812769795072000-fvRV",
    cta: "Watch on LinkedIn",
  },
];
---

<section class="mt-14 mb-6">
  <h2 class="font-semibold text-neutral-500">Projects</h2>
  <ul class="mt-4 grid gap-4 sm:grid-cols-2">
    {
      projects.map((project) => (
        <li>
          <ProjectCard project={project} />
        </li>
      ))
    }
  </ul>
</section>
